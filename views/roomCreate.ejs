<% include ./header.ejs%>
<%if(roomError)%>
  <div class="alert-warning"><%=roomError%></div>
<section>
<div class="container">
<h2 class="center" style="text-align: center;">채팅방 생성</h2>
<form class="form-horizontal" action="/chat/room/create" method="POST">
  <div class="form-group">
    <label class="control-label col-sm-2" for="title">Title:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" placeholder="Enter Title" name="title">
    </div>      
  </div>            
  <div class="form-group">    
    <label class="control-label col-sm-2" for="pwd">Password:</label>     
    <div class="col-sm-10">                       
      <input type="password" class="form-control" id="pwd" placeholder="비밀번호(없으면 공개방)" name="pwd">
    </div>
  </div>
  <div class="form-group">
    <!-- <label class="control-label col-sm-2" for="max"> Personnel:</label>
    <div class="col-sm-10">          
      <input type="text" class="form-control" id="max" placeholder="Enter Personnel" name="max">
    </div> -->
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2"> Language:</label>
    <div class="col-sm-10"> 
        <div class="radio">    
          <p class="center" style="text-align: center;">      Korean</p>     
      <input type="radio" class="form-control" name="language" value="true" checked="checked"><p style="text-align: center;" class="center">English</p>
      <input type="radio" class="form-control" name="language" value="false">

      
      </div>
    </div>
  </div>

  <div class="form-group">     
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-info">Submit</button>
    </div>
  </div>
</form>
</div>
</section>

  
<% include ./footer.ejs%>